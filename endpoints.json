{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles and sorted by date in descending order",
    "queries": [
      "author",
      "topic",
      "sort_by",
      "order"
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of specific article by id",
    "queries": [],
    "exampleResponse": {
      "article_id": 3,
      "title": "Eight pug gifs that remind me of mitch",
      "topic": "mitch",
      "author": "icellusedkars",
      "body": "some gifs",
      "created_at": "2020-11-03T09:12:00.000Z",
      "votes": 0,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id with the most recent comments first",
    "queries": [
      "sort_by",
      "order"
    ],
    "exampleResponse": [
      {
        "comment_id": 11,
        "body": "Ambidextrous marsupial",
        "article_id": 3,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2020-09-19T23:10:00.000Z"
      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "add a comment object by the given article_id",
    "requests": {
      "username": "rogersop",
      "body": "What a lovely day!"
    },
    "exampleResponse": {
      "comment_id": 19,
      "body": "What a lovely day!",
      "article_id": 3,
      "author": "rogersop",
      "votes": 0,
      "created_at": "2024-05-29T14:10:26.752Z"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes of an article by the given article_id",
    "requests": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 95,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  }
}